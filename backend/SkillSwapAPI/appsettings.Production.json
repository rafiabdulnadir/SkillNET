{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-production-server;Database=SkillSwapDB;User Id=your-username;Password=your-password;TrustServerCertificate=true"
  },
  "JwtSettings": {
    "SecretKey": "your-production-jwt-secret-key-must-be-very-secure-and-at-least-32-characters",
    "Issuer": "SkillSwapAPI",
    "Audience": "SkillSwapClient",
    "ExpirationInMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "your-production-smtp-server",
    "SmtpPort": 587,
    "SmtpUsername": "your-production-email@domain.com",
    "SmtpPassword": "your-production-password",
    "FromEmail": "noreply@skillswap.com",
    "FromName": "SkillSwap Platform"
  },
  "AllowedHosts": "your-domain.com,www.your-domain.com",
  "Environment": "Production",
  "EnableSwagger": false,
  "EnableDetailedErrors": false,
  "SeedDatabase": false
}

